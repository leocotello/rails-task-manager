<h1 class="mb-4">Task List</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to task.title, task_path(task), class: 'me-3' %> - <%= task.details %>
      <span>
        <%= task.completed ? '<i class="fas fa-check-square"></i>'.html_safe : '<i class="far fa-square"></i>'.html_safe %>
        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-warning ms-2' %>
        <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger ms-2' %>
      </span>
    </li>
  <% end %>
</ul>
<%= link_to 'New Task', new_task_path, class: 'btn btn-primary mt-4' %>
